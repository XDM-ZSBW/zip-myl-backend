# Google Cloud Development Configuration
# This file sets up local development with Google Cloud services

# Set up Google Cloud project
export GOOGLE_CLOUD_PROJECT="zip-myl-backend"
export GOOGLE_CLOUD_REGION="us-central1"

# Development environment variables
export NODE_ENV="development"
export PORT="3333"
export HOST="0.0.0.0"

# Google Cloud services for local development
export USE_GOOGLE_CLOUD_SERVICES="true"
export GOOGLE_CLOUD_EMULATOR_HOST="localhost"

# Database configuration (use Cloud SQL Proxy for local development)
export DATABASE_URL="postgresql://localhost:5432/myl_zip"
export DB_POOL_MIN="2"
export DB_POOL_MAX="10"

# Redis configuration (use local Redis or Cloud Memorystore emulator)
export REDIS_URL="redis://localhost:6379"

# Google Cloud services
export GOOGLE_CLOUD_SECRET_MANAGER_PROJECT_ID="zip-myl-backend"
export GOOGLE_CLOUD_STORAGE_BUCKET="zip-myl-backend-dev"

# Development flags
export ENABLE_METRICS="true"
export ENABLE_WEBSOCKET="true"
export ENABLE_RATE_LIMITING="false"
export SECURITY_HEADERS="true"

# Logging
export LOG_LEVEL="debug"
export LOG_FORMAT="dev"

# Development tools
export ENABLE_HOT_RELOAD="true"
export ENABLE_DEBUG_MODE="true"
