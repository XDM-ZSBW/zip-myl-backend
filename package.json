{
  "name": "zip-myl-backend",
  "version": "2.0.0",
  "description": "Enhanced Myl.Zip Backend Service v2.0.0 with Device Registration, Trust Management, RSA-OAEP Encryption, and Comprehensive Security Monitoring",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "node --watch src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:performance": "jest --testPathPattern=performance",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "lint:strict": "eslint src/ tests/ --max-warnings=0",
    "format": "prettier --write src/ tests/",
    "format:check": "prettier --check src/ tests/",
    "type-check": "tsc --noEmit",
    "security:audit": "npm audit --audit-level=moderate",
    "security:fix": "npm audit fix",
    "deps:check": "npx npm-check-updates",
    "deps:update": "npx npm-check-updates -u",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:seed": "node scripts/seed.js",
    "db:reset": "npx prisma migrate reset --force",
    "db:studio": "npx prisma studio",
    "build": "npm run lint:strict && npm run test:ci && echo 'Production build complete'",
    "build:docker": "docker build -t zip-myl-backend .",
    "build:test": "docker build -t zip-myl-backend:test .",
    "deploy": "bash scripts/deploy.sh",
    "precommit": "npm run lint:strict && npm run format:check && npm run test:unit",
    "prepare": "husky install"
  },
  "keywords": [
    "nodejs",
    "express",
    "postgresql",
    "prisma",
    "redis",
    "jwt",
    "docker",
    "google-cloud-run",
    "myl-zip",
    "thought-tracking",
    "api",
    "backend",
    "production-ready"
  ],
  "author": "Yourl.Cloud Inc.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/XDM-ZSBW/zip-myl-backend.git"
  },
  "bugs": {
    "url": "https://github.com/XDM-ZSBW/zip-myl-backend/issues"
  },
  "homepage": "https://github.com/XDM-ZSBW/zip-myl-backend#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@google-cloud/secret-manager": "^6.1.0",
    "@prisma/client": "^5.7.1",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "pg": "^8.16.3",
    "prisma": "^5.7.1",
    "prom-client": "^13.2.0",
    "rate-limit-redis": "^3.0.0",
    "redis": "^4.6.12",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "eslint": "^8.56.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jest-watch-typeahead": "^2.2.2",
    "nodemon": "^3.0.2",
    "npm-check-updates": "^16.14.19",
    "prettier": "^3.1.1",
    "snyk": "^1.1260.0",
    "supertest": "^6.3.3"
  }
}
