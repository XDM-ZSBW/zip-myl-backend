{
  "name": "zip-myl-backend",
  "version": "2.0.0",
  "description": "Production-ready Node.js backend service for the Myl.Zip ecosystem with end-to-end encryption, device trust management, Google Secret Manager integration, and secure cloud deployment.",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "node --watch src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "format": "prettier --write src/ tests/",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:seed": "node scripts/seed.js",
    "build": "echo 'Production build complete'",
    "deploy": "bash scripts/deploy.sh"
  },
  "keywords": [
    "nodejs",
    "express",
    "postgresql",
    "prisma",
    "redis",
    "jwt",
    "docker",
    "google-cloud-run",
    "myl-zip",
    "thought-tracking",
    "api",
    "backend",
    "production-ready"
  ],
  "author": "Yourl.Cloud Inc.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/XDM-ZSBW/zip-myl-backend.git"
  },
  "bugs": {
    "url": "https://github.com/XDM-ZSBW/zip-myl-backend/issues"
  },
  "homepage": "https://github.com/XDM-ZSBW/zip-myl-backend#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@google-cloud/secret-manager": "^6.1.0",
    "@prisma/client": "^5.7.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.10.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "prisma": "^5.7.1",
    "prom-client": "^13.2.0",
    "rate-limit-redis": "^3.0.0",
    "redis": "^4.6.12",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  }
}
