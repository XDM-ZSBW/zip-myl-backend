# Application Configuration
NODE_ENV=development
PORT=8080
HOST=0.0.0.0
APP_VERSION=2.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=mylzip_production
DB_USER=mylzip_user
DB_PASSWORD=your_secure_password_here
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_SSL=false

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
ENCRYPTION_MASTER_KEY=your-encryption-master-key-change-in-production
SERVICE_API_KEY=your-service-api-key-change-in-production

# CORS Configuration
CORS_ORIGIN=chrome-extension://*,moz-extension://*,
https://*.google.com,https://*.github.com,https://*.myl.zip,https://*.zaido.org,http://localhost:*,https://localhost:*
CORS_CREDENTIALS=true

# Enhanced Extension Support
TRUSTED_EXTENSION_IDS=your-trusted-extension-id-here
TRUSTED_EXTENSION_API_KEY=your-trusted-extension-api-key

# Rate Limiting Configuration
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Extension-Specific Rate Limits
EXTENSION_RATE_LIMIT_GENERAL=100
EXTENSION_RATE_LIMIT_AUTH=5
EXTENSION_RATE_LIMIT_PAIRING=3
EXTENSION_RATE_LIMIT_DEVICE_REG=2
EXTENSION_RATE_LIMIT_NFT=20

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
PROMETHEUS_ENABLED=true

# Performance Configuration
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000
COMPRESSION_ENABLED=true

# Security Headers
SECURITY_HEADERS=true
HSTS_MAX_AGE=31536000
CSP_ENABLED=true

# Feature Flags
ENABLE_DEVICE_TRUST=true
ENABLE_CROSS_DEVICE_SHARING=true
ENABLE_ENCRYPTION=true
ENABLE_AUDIT_LOGGING=true
ENABLE_COMPRESSION=true
ENABLE_WEBSOCKET=false

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=zip-myl-backend
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json
GCLOUD_REGION=us-central1

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TTL=3600

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@myl.zip

# Device Trust Configuration
DEVICE_TRUST_EXPIRY_DAYS=365
PAIRING_CODE_EXPIRY_MINUTES=10
MAX_TRUSTED_DEVICES=10

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
LIVENESS_PROBE_PATH=/health/live
READINESS_PROBE_PATH=/health/ready
HEALTH_CHECK_INTERVAL=30

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_BUCKET=gs://zip-myl-backend-backups
